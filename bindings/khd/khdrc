# =================
# FOCUS
# =================

# focus window
alt - h : chunkc tiling::window --focus west
alt - j : chunkc tiling::window --focus south
alt - k : chunkc tiling::window --focus north
alt - l : chunkc tiling::window --focus east

# focus specific desktop
# alt - <number> : OSX native keybinding

# tab desktops
alt - o : `$HOME/.dotfiles/bin/khdx desktop tab`

# tab monitors
alt - p : `$HOME/.dotfiles/bin/khdx monitor tab`


# =================
# MOVE MODE
# =================

# mode config
khd mode move prefix on
khd mode move timeout 0.75
khd mode move restore default
alt - d : khd -e "mode activate move"

# Send window to previous desktop
move - h : chunkc tiling::window --send-to-desktop prev
move - l : chunkc tiling::window --send-to-desktop next
move - j : chunkc tiling::window --send-to-monitor prev
move - k : chunkc tiling::window --send-to-monitor next
move - 1 : chunkc tiling::window -d 1
move - 2 : chunkc tiling::window -d 2
move - 3 : chunkc tiling::window -d 3
move - 4 : chunkc tiling::window -d 4
move - 5 : chunkc tiling::window -d 5
move - 6 : chunkc tiling::window -d 6
move - 7 : chunkc tiling::window -d 7
move - 8 : chunkc tiling::window -d 8
move - 9 : chunkc tiling::window -d 9
move + shift - 1 : chunkc tiling::window -d 1; khd -p "alt - 1"
move + shift - 2 : chunkc tiling::window -d 2; khd -p "alt - 2"
move + shift - 3 : chunkc tiling::window -d 4; khd -p "alt - 3"
move + shift - 4 : chunkc tiling::window -d 4; khd -p "alt - 4"
move + shift - 5 : chunkc tiling::window -d 5; khd -p "alt - 5"
move + shift - 6 : chunkc tiling::window -d 6; khd -p "alt - 6"
move + shift - 7 : chunkc tiling::window -d 7; khd -p "alt - 7"
move + shift - 8 : chunkc tiling::window -d 8; khd -p "alt - 8"
move + shift - 9 : chunkc tiling::window -d 9; khd -p "alt - 9"


# =================
# APPLICATION MODE
# =================

# mode config
khd mode application prefix on
khd mode application timeout 0.75
khd mode application restore default
alt - a : khd -e "mode activate application"

# open terminal
application - return : open -na /Applications/iTerm.app

# open Spotify (music)
application - m : open -na /Applications/Spotify.app

# open Chrome (browser)
application - b : open -na "/Applications/Google Chrome".app


# =================
# LAYOUT MODE
# =================

# mode config
khd mode layout prefix on
khd mode layout timeout 0.75
khd mode layout restore default
alt - s : khd -e "mode activate layout"

# equalize size of windows
layout - q : chunkc tiling::desktop --equalize

# increase region size
layout - h : chunkc tiling::window --use-temporary-ratio 0.1 --adjust-window-edge west
layout - j : chunkc tiling::window --use-temporary-ratio 0.1 --adjust-window-edge south
layout - k : chunkc tiling::window --use-temporary-ratio 0.1 --adjust-window-edge north
layout - l : chunkc tiling::window --use-temporary-ratio 0.1 --adjust-window-edge east

# decrease region size
layout + shift - h : chunkc tiling::window --use-temporary-ratio -0.1 --adjust-window-edge west
layout + shift - j : chunkc tiling::window --use-temporary-ratio -0.1 --adjust-window-edge south
layout + shift - k : chunkc tiling::window --use-temporary-ratio -0.1 --adjust-window-edge north
layout + shift - l : chunkc tiling::window --use-temporary-ratio -0.1 --adjust-window-edge east

# rotate tree
layout - r : chunkc tiling::desktop --rotate 90

# mirror tree y-axis
layout - y : chunkc tiling::desktop --mirror vertical

# mirror tree x-axis
layout - x : chunkc tiling::desktop --mirror horizontal

# toggle desktop offset
layout - p : chunkc tiling::desktop --toggle offset

# change layout of desktop
layout - b : chunkc tiling::desktop --layout bsp
layout - m : chunkc tiling::desktop --layout monocle
layout - f : chunkc tiling::desktop --layout float


# =================
# MISC
# =================

# toggle window fullscreen
alt - f : chunkc tiling::window --toggle fullscreen

# toggle window native fullscreen
shift + alt - f : chunkc tiling::window --toggle native-fullscreen

# float / unfloat window
alt - space : chunkc tiling::window --toggle float

# toggle sticky, float and resize to picture-in-picture size
alt + shift - space : chunkc tiling::window --toggle sticky;\
          chunkc tiling::window --warp-floating pip-right


# =================
# CONFIG
# =================

# reload config
cmd + alt + ctrl - k : khd -e "reload"


