#!/bin/bash
# vim: filetype=sh

source $DOTFILES/scripts/aux/utils.sh 
source $DOTFILES/scripts/aux/install.sh 

##? List properties
##?
##? Usage:
##?    install dotfiles
##?    install osx (android|clojure|apps|gnu)

eval_docopts "$@"

if $dotfiles; then
  update_dotfiles_common
  if is_osx; then
    update_dotfiles_osx
  fi
elif $android; then
  cask_install "cask-java" "cask-android"
elif $clojure; then
  cask_install "cask-java"
  brew_install "leiningen"
elif $apps; then
  cask_install "cask-apps"
elif $gnu; then
  gnu_install
fi

